<project name="run-unit-tests">
	<target name="RunUnitTests">
  
		<nunit2>
			<formatter type="Xml" usefile="true" extension=".xml" outputdir="${artifacts.dir}UnitTests" />
			<test haltonfailure="true">
				<assemblies basedir="${buildarea.output.dir}">
					<include name="Bluejam.Utils.DatabaseScripter.Tests.dll" />
				</assemblies>
			</test>
		</nunit2>
		
