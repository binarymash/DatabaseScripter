<?xml version="1.0" encoding="utf-8"?>

<EnvironmentConfiguration
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns="http://code.google.com/p/databasescripter/2010/08/29/EnvironmentConfigurationSchema">

  <Name>SystemTest</Name>

  <!-- Global script properties. These will be substituted into the scripts if a matching key is found in -->
  <!-- a script. Global properties may be overriden for a script by specifying a property element in a  -->
  <!-- script element below -->
  <Properties>
    <Property name="connection">medialibrary</Property>
    <Property name="databaseName">MediaLibrary</Property>
  </Properties>

  <ThisIsAnUnknownElement />

  <!-- Script-specific configuration. Scripts can optionally have their own properties element, which allows -->
  <!-- overriding of global script properties. -->
  <ScriptConfigurations>

    <ScriptConfiguration name="insert sample data">
      <Properties>
        <Property name="title">Peep Show</Property>
        <Property name="episodeNum">s01e01</Property>
        <Property name="date">0x000093F900000000</Property>
        <Property name="description">Mark and Jeremy compete for the attentions of their attractive neighbor Toni.</Property>
        <Property name="rating">5</Property>
        <Property name="mediumType1Name">DVD+R</Property>
        <Property name="mediumType1Description">DVD+R 4.7GB</Property>
        <Property name="mediumType2Name">DVD+RW</Property>
        <Property name="mediumType2Description">DVD+RW 4.7GB</Property>
      </Properties>
    </ScriptConfiguration>

  </ScriptConfigurations>

</EnvironmentConfiguration>

