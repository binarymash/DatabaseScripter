<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  
  <configSections>
    <section
      name="castle"
      type="Castle.Windsor.Configuration.AppDomain.CastleSectionHandler, Castle.Windsor" />    
    <section 
      name="databaseScripter"
      type="Bluejam.Utils.DatabaseScripter.Core.Config.DatabaseScripterSection, Bluejam.Utils.DatabaseScripter.Core, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null"/>
  </configSections>

  <!-- connection strings -->
  <connectionStrings>
    <add name="medialibrary" providerName="System.Data.SqlClient" connectionString="Data Source=LAPTOP\SQLEXPRESS;User ID=devadmin;Password=devadminpass"/>
  </connectionStrings>

  <castle>
    <components>
      
      <!-- Defines the implementation of IDatabaseAdapter to use -->
      <component 
        id="databaseAdapter"
        service="Bluejam.Utils.DatabaseScripter.DbAdapter.IDatabaseAdapter, Bluejam.Utils.DatabaseScripter.DbAdapter"
        type="Bluejam.Utils.DatabaseScripter.DbAdapter.SqlServer.SqlServerAdapter, Bluejam.Utils.DatabaseScripter.DbAdapter.SqlServer"/>
      
      <component
        id="previewAdapter"
        service="Bluejam.Utils.DatabaseScripter.DbAdapter.IDatabaseAdapter, Bluejam.Utils.DatabaseScripter.DbAdapter"
        type="Bluejam.Utils.DatabaseScripter.DbAdapter.FileWriter.FileWriterAdapter, Bluejam.Utils.DatabaseScripter.DbAdapter.FileWriter"/>

    </components>
  </castle>
    
  <databaseScripter>
    
    <!-- Path of the scripts manifest file-->
    <manifestPath>Example\manifest.xml</manifestPath>
    
    <!-- Global script properties. These will be substituted into the scripts if a matching key is found in -->
    <!-- a script. Global properties may be overriden for a script by specifying a property element in a  -->
    <!-- script element below -->
    <globalScriptProperties>
      <property name="connection">medialibrary</property>
      <property name="databaseName">MediaLibrary</property>
    </globalScriptProperties>
    
    <!-- scripts to be run - the name is used to find the information in the manifest file -->
    <!-- scripts can optionally have their own properties element, which allows overriding -->
    <!-- overriding of global script properties. -->
    <scripts>
      <script name="create">
        <properties>
          <property name="databasePath">D:\databases</property>
        </properties>
      </script>
      <script name="increment to 0.0.1" />
      <!--<script name="drop" />--> 
    </scripts>
  </databaseScripter>
  
</configuration>