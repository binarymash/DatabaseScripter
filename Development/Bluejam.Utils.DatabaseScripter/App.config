<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="castle" type="Castle.Windsor.Configuration.AppDomain.CastleSectionHandler, Castle.Windsor" />
    <section name="databaseScripter" type="Bluejam.Utils.DatabaseScripter.Config.DatabaseScripterSection, Bluejam.Utils.DatabaseScripter.Config, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <connectionStrings>
    <add name="medialibrary" providerName="System.Data.SqlClient" connectionString="Data Source=LAPTOP\SQLEXPRESS;User ID=devadmin;Password=devadminpass" />
  </connectionStrings>
  <castle>
    <components>
      <component id="databaseAdapter" service="Bluejam.Utils.DatabaseScripter.Domain.DatabaseAdapter, Bluejam.Utils.DatabaseScripter.Domain" type="Bluejam.Utils.DatabaseScripter.DbAdapter.SqlServerSmo.Adapter, Bluejam.Utils.DatabaseScripter.DbAdapter.SqlServerSmo" />
      <component id="previewAdapter" service="Bluejam.Utils.DatabaseScripter.Domain.DatabaseAdapter, Bluejam.Utils.DatabaseScripter.Domain" type="Bluejam.Utils.DatabaseScripter.DbAdapter.FileWriter.Adapter, Bluejam.Utils.DatabaseScripter.DbAdapter.FileWriter" />
      <component id="configInjector" service="Bluejam.Utils.DatabaseScripter.Domain.ConfigInjector, Bluejam.Utils.DatabaseScripter.Domain" type="Bluejam.Utils.DatabaseScripter.BasicConfigInjector.Injector, Bluejam.Utils.DatabaseScripter.BasicConfigInjector" />
    </components>
  </castle>
  <databaseScripter xmlns="http://code.google.com/p/databasescripter/2010/08/29/ConfigSchema">
    <manifestPath>Example\Manifest\manifest.xml</manifestPath>
    <environmentConfigurationPaths>
      <environmentConfigurationPath>Example\EnvironmentConfigurations\development.xml</environmentConfigurationPath>
      <environmentConfigurationPath>Example\EnvironmentConfigurations\qa.xml</environmentConfigurationPath>
    </environmentConfigurationPaths>
  </databaseScripter>
  <log4net>
    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-5level %message%newline" />
      </layout>
    </appender>
    <appender name="LogFile" type="log4net.Appender.FileAppender">
      <file value="log.txt" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level %logger - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="INFO" />
      <appender-ref ref="Console" />
      <appender-ref ref="LogFile" />
    </root>
  </log4net>
</configuration>